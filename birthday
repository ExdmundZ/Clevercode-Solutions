#include <iostream>
using namespace std;
int main()
{
   int a, b;
   cin >> b;
   for(a = 2; a<=b; a++)
    cout << "$ ";
    cout << "$" <<  endl;

    for(a = 2; a<=b; a++)
    cout << "| ";
    cout <<"|"<<  endl;

    for(a = 2; a<=b; a++)
    cout << "--";
    cout <<"-"<< endl;

    for(a = 2; a<=b; a++)
    cout << "~~";
    cout <<"~"<< endl;

    for(a = 2; a<=b; a++)
    cout << "--";
    cout <<"-"<< endl;
}
